###############################################################################
# VPN Stack Environment Variables
# Copy to .env and fill in your values before deploying
# NEVER commit .env to git — add it to .gitignore
###############################################################################

# ── Domain & Networking ──────────────────────────────────────────────────────
DOMAIN=vpn.yourdomain.com          # Base domain (subdomains: vpn., auth., traefik.)
VPN_HOST=YOUR_PUBLIC_IP_OR_DOMAIN  # Public IP or FQDN for WireGuard clients to connect to
TZ=Asia/Dubai                      # Your timezone

# ── WireGuard Settings ───────────────────────────────────────────────────────
WG_DNS=1.1.1.1,8.8.8.8            # DNS pushed to VPN clients
WG_ALLOWED_IPS=0.0.0.0/0          # Full tunnel (all traffic via VPN)
# For split tunnel (only route to your network):
# WG_ALLOWED_IPS=10.8.0.0/24,192.168.1.0/24

# ── Authelia Secrets (generate with: openssl rand -hex 32) ───────────────────
# Run: openssl rand -hex 32
AUTHELIA_JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM_SECRET
# Run: openssl rand -hex 32
AUTHELIA_SESSION_SECRET=REPLACE_WITH_64_CHAR_RANDOM_SECRET
# Run: openssl rand -hex 32
AUTHELIA_STORAGE_ENCRYPTION_KEY=REPLACE_WITH_64_CHAR_RANDOM_SECRET

# ── Database ─────────────────────────────────────────────────────────────────
# Run: openssl rand -base64 24
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# ── Redis ────────────────────────────────────────────────────────────────────
# Run: openssl rand -base64 24
REDIS_PASSWORD=REPLACE_WITH_STRONG_PASSWORD

# ── ACME/Let's Encrypt (uncomment in traefik config to enable) ───────────────
ACME_EMAIL=admin@yourdomain.com
